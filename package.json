{
  "name": "nx-shell",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "description": "一款高颜值的SSH终端工具",
  "author": {
    "name": "沐雨",
    "email": "374856393@qq.com",
    "url": "https://github.com/bzw1204"
  },
  "license": "MIT",
  "homepage": "https://github.com/bzw1204/NxShell.git",
  "repository": {
    "type": "git",
    "url": "https://github.com/bzw1204/NxShell.git"
  },
  "bugs": {
    "url": "https://github.com/bzw1204/NxShell/issues"
  },
  "releases": "https://github.com/bzw1204/NxShell/releases",
  "keywords": [
    "electron",
    "rollup",
    "vite",
    "vue5",
    "vue3",
    "shell",
    "terminal",
    "xterm",
    "port",
    "vnc",
    "ssh",
    "sftp",
    "ftp",
    "serial",
    "unocss",
    "typescript",
    "nx-shell",
    "shell"
  ],
  "main": "./out/main/index.js",
  "engines": {
    "node": ">=22.14.0"
  },
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "preinstall": "npx simple-git-hooks",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "@electron-uikit/core": "^1.1.0",
    "@electron-uikit/titlebar": "^1.2.0",
    "electron-store": "^10.0.1",
    "electron-updater": "^6.6.2",
    "node-pty": "1.1.0-beta34",
    "ssh2": "^1.16.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.12.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@types/node": "^22.14.1",
    "@types/ssh2": "^1.15.5",
    "@unocss/eslint-plugin": "^66.0.0",
    "@unocss/preset-icons": "^66.0.0",
    "@unocss/preset-rem-to-px": "^66.0.0",
    "@unocss/preset-tagify": "^66.0.0",
    "@unocss/transformer-directives": "^66.0.0",
    "@unocss/transformer-variant-group": "^66.0.0",
    "@vicons/ionicons5": "^0.13.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vitejs/plugin-vue-jsx": "^4.1.2",
    "@vueuse/core": "^13.3.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-image": "^0.8.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/addon-webgl": "^0.18.0",
    "@xterm/xterm": "^5.5.0",
    "color-thief-ts": "^1.1.1",
    "electron": "^35.1.5",
    "electron-builder": "^25.1.8",
    "electron-log": "^5.3.3",
    "electron-vite": "^3.1.0",
    "eslint": "^9.24.0",
    "eslint-plugin-format": "^1.0.1",
    "naive-ui": "^2.41.0",
    "nanoid": "^5.1.5",
    "pinia": "^3.0.3",
    "pinia-plugin-persistedstate": "^4.3.0",
    "prettier": "^3.5.3",
    "sass": "^1.86.3",
    "simple-git-hooks": "^2.12.1",
    "tinykeys": "^3.0.0",
    "typescript": "^5.8.3",
    "unocss": "^66.0.0",
    "unplugin-auto-import": "^19.1.2",
    "unplugin-vue-components": "^28.5.0",
    "vite": "^6.2.6",
    "vite-plugin-vue-setup-extend": "^0.4.0",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0",
    "vue-tsc": "^2.2.8"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "cpu-features",
      "electron",
      "esbuild",
      "node-pty",
      "simple-git-hooks",
      "ssh2"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npm run typecheck",
    "pre-push": "npx lint-staged"
  },
  "lint-staged": {
    "*": [
      "git add ."
    ],
    "*.{ts,tsx,vue}": [
      "eslint --fix"
    ],
    "*.{css,less}": [
      "prettier --write"
    ]
  }
}
