{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/**/*",
    "src/preload/types/*.d.ts",
    "src/renderer/src/**/*.vue",
    "src/renderer/src/types/*.d.ts",
  ],
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ]
    },
    "types": [
      "@skit/x.naive-ui/types/volar.d.ts"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}